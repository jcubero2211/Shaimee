# ========================================
# SHAYMEE AI AGENT - ENVIRONMENT VARIABLES
# ========================================

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://username:password@localhost:5432/shaymee
REDIS_URL=redis://localhost:6379

# ========================================
# OPENAI CONFIGURATION
# ========================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# ========================================
# WHATSAPP BUSINESS API CONFIGURATION
# ========================================
WHATSAPP_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_PORT=3002

# ========================================
# TEMU API CONFIGURATION
# ========================================
TEMU_API_KEY=your_temu_api_key
TEMU_API_URL=https://api.temu.com
TEMU_PARTNER_ID=your_partner_id
TEMU_SECRET_KEY=your_secret_key

# ========================================
# CORREOS DE COSTA RICA API CONFIGURATION
# ========================================
CORREOS_API_KEY=your_correos_api_key
CORREOS_API_URL=https://api.correos.go.cr
CORREOS_USERNAME=your_username
CORREOS_PASSWORD=your_password

# ========================================
# SINPE API CONFIGURATION
# ========================================
SINPE_API_KEY=your_sinpe_api_key
SINPE_API_URL=https://api.sinpe.fi.cr
SINPE_MERCHANT_ID=your_merchant_id
SINPE_SECRET_KEY=your_secret_key

# ========================================
# AI AGENT CONFIGURATION
# ========================================
AI_AGENT_URL=http://localhost:8001
AI_AGENT_TOKEN=your_ai_agent_token

# ========================================
# VECTOR DATABASE CONFIGURATION
# ========================================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX_NAME=shaymee-products

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# SECURITY CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# MONITORING CONFIGURATION
# ========================================
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_LOGGING=true

